<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Clean Blog - Start Bootstrap Theme</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script
      src="https://use.fontawesome.com/releases/v6.1.0/js/all.js"
      crossorigin="anonymous"
    ></script>
    <!-- Google fonts-->
    <link
      href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"
      rel="stylesheet"
      type="text/css"
    />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Navigation-->
    <%- include("partials/nav") %>
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
      <div class="container position-relative px-4 px-lg-5 header-container">
        <div class="row gx-4 gx-lg-5 justify-content-center align-items-center header-container">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="post-heading">
              <h1><%= article.title.slice(0, -1) %></h1>
              <span class="meta">
                Posted by <%= article.user.firstname + " " + article.user.lastname %> on <%=
                article.user.createdAt %>
                <!-- TODO use date-fns -->
              </span>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Post Content-->
    <article class="mb-4">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <p><%- article.content %></p>
          </div>
        </div>
      </div>
    </article>

    <% if (comments.length) { %>
    <section class="container px-4 px-lg-5 mb-5">
      <div class="row gx-4 gx-lg-5 px-4 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7 comments-container">
          <h3 class="my-4">Comments</h3>
          <% for (let comment of comments) { %>
          <span class="d-block"
            ><span class="fw-bold fst-italic"
              ><%= comment.user.firstname %> <%= comment.user.lastname %></span
            >
            on <%= comment.createdAt %></span
          >
          <p class="mt-3 mb-5"><%- comment.content %></p>
          <% } %>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 comments-container">
          <form method="POST" class="pb-3">
            <div class="mb-2">
              <label for="comment" class="form-label leave-your-comment">Leave your comment.</label>
              <textarea class="form-control" id="comment" name="content" rows="4"></textarea>
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary submit-button">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </section>
    <% } %>

    <!-- Footer-->
    <%- include("partials/footer") %>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/js/scripts.js"></script>
  </body>
</html>
